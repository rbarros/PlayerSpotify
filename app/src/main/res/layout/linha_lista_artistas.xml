<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagem_artista_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/nome_artista_text_view"
        android:text="nome artista"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagem_artista_image_view"
        android:layout_alignLeft="@+id/imagem_artista_image_view"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nome_album_text_view"
        android:text="nome album"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_artista_text_view" />

</RelativeLayout>